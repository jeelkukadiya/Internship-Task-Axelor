<?xml version="1.0" encoding="UTF-8"?>
<!-- modules/axelor-contact/src/main/resources/views/Address.xml -->
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  https://axelor.com/xml/ns/object-views/object-views_7.3.xsd">

  <grid name="address-grid" title="Addresses" model="com.axelor.contact.db.Address">
    <field name="fullName" title="Name"/>
    <field name="numberAndStreet"/>
    <field name="zip"/>
    <field name="city"/>
    <field name="country"/>
  </grid>

  <form name="address-form" title="Address" model="com.axelor.contact.db.Address">
    <panel title="Address Details">
      <field name="numberAndStreet"/>
      <field name="zip"/>
      <field name="city"/>
      <field name="country"/>
      </panel>
  </form>

</object-views>