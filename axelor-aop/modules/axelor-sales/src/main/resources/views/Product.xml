<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  https://axelor.com/xml/ns/object-views/object-views_7.3.xsd">

	<!-- Product Grid -->
	<grid name="product-grid" title="Products"
		model="com.axelor.sales.db.Product">
		<field name="fullName" />
		<field name="code" />
		<field name="name" />
		<field name="unitPriceUntaxed" />
		<field name="productCategory" />
		<field name="account" />
	<!-- 	<field name="account" /> Added account field -->
		<field name="image" showTitle="false" colSpan="12"
			widget="image" />
	</grid>

	<!-- Product Form -->
	<form name="product-form" title="Product"
		model="com.axelor.sales.db.Product">
		<panel title="Details">
			<field name="image" showTitle="false" colSpan="12"
				widget="image" />
			<field name="code" />
			<field name="name" />
			<field name="unitPriceUntaxed" />
			<field name="productCategory" />
			<field name="account" colSpan="12" />  <!-- Added account field -->
		</panel>
	</form>

</object-views>